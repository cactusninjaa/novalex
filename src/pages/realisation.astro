---
import { frontmatter as realisation } from '../content/realisation.md'
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Header from '../components/Header.astro';

const realisations = await getCollection("realisations");
console.log(realisations);
---

<Layout>
    <main>
        <Header />
        <Hero 
            title={realisation.title} 
            description={realisation.description} 
        />
        <section class="py-16">
            <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 md:px-16 px-4 gap-6">
                {realisations.map((realisation: any) => (
                    <a href={`/realisation/${realisation.slug}`}>
                        <div class="relative w-full h-96 rounded-3xl overflow-hidden">
                        <div 
                            style={`background-image: url(${realisation.data.hero_image});`} 
                            class="absolute top-0 left-0 w-full h-full bg-cover bg-center opacity-90"
                        ></div>

                        <div class="relative z-10 w-full h-full flex items-end px-4 py-2">
                            <p class="text-white text-lg font-bold">{realisation.data.title}</p>
                        </div>
                        </div>
                    </a>
                ))}
            </ul>
        </section>
    </main>
</Layout>