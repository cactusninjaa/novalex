---
import { frontmatter as homepage } from '../content/homepage.md'
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
// console.log(homepage);
// console.log(homepage.featured_realisations)
---

<Layout>
  <main class="container mx-auto px-4">
    <div class={`bg-red-500 py-16`}>Test</div>

    <!-- Hero Section -->
    <section class="text-center py-16">
      <h1 class="text-4xl font-bold">{homepage.title}</h1>
      <p class="mt-4 text-lg">{homepage.description}</p>
      <img src={homepage.hero_image} alt="Image principale" class="mt-6 mx-auto w-full max-w-4xl rounded-lg shadow-md" />
    </section>

    <!-- Réalisations mises en avant -->
    <section class="py-16">
      <h2 class="text-3xl text-red-500 font-semibold">Réalisations mises en avant</h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-6">
        {homepage.featured_realisations.items.map((realisation: any) => (
          <li class="p-4 bg-gray-100 rounded-lg shadow-md text-center">{realisation}</li>
        ))}
      </ul>
    </section>

    <!-- Engagements -->
    <section class="py-16">
      <h2 class="text-3xl font-semibold">Nos engagements</h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 mt-6">
        {homepage.engagements.items.map((item: { title: string; description: string; }) => (
          <li class="p-4 bg-white border-l-4 border-blue-500 rounded-md shadow-md">
            <h3 class="font-bold">{item.title}</h3>
            <p class="mt-2">{item.description}</p>
          </li>
        ))}
      </ul>
    </section>

    <!-- Expertises -->
    <section class="py-16">
      <h2 class="text-3xl font-semibold">Nos expertises</h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 mt-6">
        {homepage.expertises.items.map((item: { title: string; description: string; }) => (
          <li class="p-4 bg-gray-100 rounded-md shadow-md">
            <h3 class="font-bold">{item.title}</h3>
            <p class="mt-2">{item.description}</p>
          </li>
        ))}
      </ul>
    </section>

    <!-- Équipe -->
    <section class="py-16 text-center">
      <h2 class="text-3xl font-semibold">Notre équipe</h2>
      <p class="text-lg mt-2">{homepage.equipe.description}</p>
      <img src={homepage.equipe.image} alt="Équipe" class="mt-6 mx-auto w-full max-w-md rounded-lg shadow-md" />
    </section>

    <!-- Certifications et Assurances -->
    <section class="py-16">
      <h2 class="text-3xl font-semibold">Certifications et assurances</h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
        {homepage.certifications.items.map((item: { image: string | null | undefined; title: string; description: string; }) => (
          <li class="p-4 bg-white rounded-md shadow-md text-center">
            <img src={item.image} alt={item.title} class="w-24 h-24 mx-auto mb-4" />
            <h3 class="font-bold">{item.title}</h3>
            <p class="mt-2">{item.description}</p>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>