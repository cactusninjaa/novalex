---
import Logo from "./Logo.astro";
---

<header class="bg-[#212529] fixed top-0 left-0 w-full z-50 p-4 md:px-16 transition-all">
  <div class="w-full flex justify-between items-center">
    <!-- Logo -->
    <div>
      <Logo />
    </div>

    <!-- Menu Desktop -->
    <nav class="hidden md:flex space-x-6">
      <a href="/" class="text-white hover:text-gray-300">Accueil</a>
      <a href="/realisation" class="text-white hover:text-gray-300">Réalisations</a>
    </nav>

    <!-- Burger Button -->
    <button id="burger-btn" class="md:hidden text-white z-50 relative">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>
</header>

<!-- Fullscreen Mobile Menu -->
<div id="mobile-menu" class="fixed inset-0 bg-[#212529] text-white flex flex-col items-center justify-center transform translate-y-full transition-transform duration-300 z-51">
  <a href="/" class="text-2xl py-4">Accueil</a>
  <a href="/realisation" class="text-2xl py-4">Réalisations</a>
  <button id="close-menu" class="absolute top-5 right-5 text-white text-4xl">&times;</button>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const burgerBtn = document.getElementById("burger-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const closeMenu = document.getElementById("close-menu");

  if (!burgerBtn || !mobileMenu || !closeMenu) {
    console.error("Certains éléments du menu burger sont introuvables !");
    return;
  }

  burgerBtn.addEventListener("click", () => {
    mobileMenu.classList.remove("translate-y-full");
  });

  closeMenu.addEventListener("click", () => {
    mobileMenu.classList.add("translate-y-full");
  });
});

</script>
